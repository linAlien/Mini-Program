<!-- 地图容器 -->
<view class="map-container">
<!-- 地图组件 （longitude  latitude经纬度）-->
  <map id="map" markers="{{markers}}" bindmarkertap="handleMarkerTap" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" class="map" show-location controls="{{controls}}" bindcontroltap="controltap"></map>
</view>
<!-- 底部容器 -->
<view class="btns">
  <view class="btn btn-publish">
    <navigator url="/pages/publish/publish">发布</navigator>
  </view>
  <view class="btn">
    <navigator url="/pages/search/search">搜索</navigator>
  </view>
</view>